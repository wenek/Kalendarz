<resources>
    <!-- Light Theme -->
    <style name="Theme.KalendarzSemi.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/background_color_light</item>
        <item name="colorPrimaryDark">@color/background_color_light</item>
        <item name="colorAccent">@color/button_color_light</item>
        <item name="android:textColorPrimary">@color/primary_text_color_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_light</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.KalendarzSemi.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background_color_dark</item>
        <item name="colorPrimaryDark">@color/background_color_dark</item>
        <item name="colorAccent">@color/button_color_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_color_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_dark</item>
    </style>

    <!-- Vibrant Theme -->
    <style name="Theme.KalendarzSemi.Vibrant" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/background_color_vibrant</item>
        <item name="colorPrimaryDark">@color/background_color_vibrant</item>
        <item name="colorAccent">@color/button_color_vibrant</item>
        <item name="android:textColorPrimary">@color/primary_text_color_vibrant</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_vibrant</item>
    </style>
</resources>
